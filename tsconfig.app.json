{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "./**/*",
    "./**/*.vue",
    "tests",
    "stores",
    "stores/authentication.ts",
    "ts/index.ts",
    "components",
    "pages"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  }
}
